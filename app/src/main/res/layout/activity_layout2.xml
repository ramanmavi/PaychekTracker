<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context="com.example.ramanvir.paychektracker.layout2"
    android:layout_width="368dp"
    android:layout_height="495dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp">

    <EditText
        android:id="@+id/editText"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:text="Name" />

    <TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:textAlignment="center">

    <TextView
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:text="Enter 1st day hours"
        android:gravity="center_horizontal"/>

    <EditText

        android:id="@+id/hour1"
        android:layout_width="212dp"
        android:layout_height="50dp"
        android:textColor="@android:color/black"
        android:textSize="20dp" />
</TableRow>

<TableRow
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <TextView
        android:text="Enter 2nd day hours"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal" />

    <EditText

        android:layout_width="212dp"
        android:layout_height="50dp"
        android:id="@+id/hour2"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        />
</TableRow>

<TableRow
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <TextView
        android:text="Enter 3rd day hours"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        />

    <EditText

        android:layout_width="212dp"
        android:layout_height="50dp"
        android:id="@+id/hour3"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        />
</TableRow>

<TableRow
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <TextView
        android:text="Enter 4th day hours"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        />

    <EditText

        android:layout_width="212dp"
        android:layout_height="50dp"
        android:id="@+id/hour4"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        />
</TableRow>

<TableRow
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textView"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:text="Enter 5th day hours"
        android:gravity="center_horizontal"/>

    <EditText

        android:layout_width="212dp"
        android:layout_height="50dp"
        android:id="@+id/hour5"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        />
</TableRow>

<TableRow
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <TextView
        android:text="Enter 6th day hours"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        />

    <EditText

        android:layout_width="212dp"
